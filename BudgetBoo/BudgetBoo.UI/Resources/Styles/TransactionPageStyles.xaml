<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Picker" x:Key="GeneralPickerStyles">
        <Setter Property="BackgroundColor" Value="{StaticResource DarkGrey}"/>
        <Setter Property="FontFamily" Value="RobotoMonoRegular"/>
        <Setter Property="FontSize" Value="{StaticResource NormalText}"/>
        <Setter Property="TextColor" Value="{StaticResource White}"/>
    </Style>

    <Style TargetType="Entry" x:Key="GeneralEntryStyles">
        <Setter Property="BackgroundColor" Value="{StaticResource DarkGrey}"/>
        <Setter Property="FontFamily" Value="RobotoMonoRegular"/>
        <Setter Property="FontSize" Value="{StaticResource NormalText}"/>
        <Setter Property="TextColor" Value="{StaticResource White}"/>
    </Style>

    <Style TargetType="Button" x:Key="GeneralButtonStyles">
        <Setter Property="BackgroundColor" Value="{StaticResource White}"/>
        <Setter Property="BorderColor" Value="White"/>

        <Setter Property="FontFamily" Value="RobotoMonoBold"/>
        <Setter Property="FontSize" Value="{StaticResource NormalText}"/>
        <Setter Property="TextColor" Value="{StaticResource Black}"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal" />
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Black}" />
                            <Setter Property="TextColor" Value="{StaticResource LightGrey}"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Black}" />
                            <Setter Property="TextColor" Value="{StaticResource White}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    <Style TargetType="Grid" x:Key="TransactionPageContainerStyles">
        <Setter Property="RowDefinitions" Value="Auto, *"/>
        <Setter Property="MaximumWidthRequest" Value="1200"/>
    </Style>
    
    <Style TargetType="Grid" x:Key="SearchBarStyles">
        <Setter Property="Grid.Row" Value="0"/>
        <Setter Property="Margin" Value="35, 50, 35, 25"/>
        <Setter Property="ColumnDefinitions" Value="*, 170, 170, 80"/>
        <Setter Property="ColumnSpacing" Value="5"/>

    </Style>

    <Style TargetType="Entry" x:Key="SearchEntryStyles" BasedOn="{StaticResource GeneralEntryStyles}">
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="Grid.Column" Value="0"/>
        
    </Style>
    <Style TargetType="Picker" BasedOn="{StaticResource GeneralPickerStyles}" x:Key="SearchPickerStyles">
        <Setter Property="Grid.Column" Value="2"/>
        <Setter Property="WidthRequest" Value="155"/>
    </Style>
    <Style TargetType="Button" x:Key="SearchButtonStyles" BasedOn="{StaticResource GeneralButtonStyles}">
        <Setter Property="Grid.Column" Value="3"/>
        
    </Style>

    <Style TargetType="Grid" x:Key="TransactionTableStyles">
        <Setter Property="RowDefinitions" Value="40, *, 50"/>
        <Setter Property="Margin" Value= "35,0, 35, 50"/>
        <Setter Property="BackgroundColor" Value="{StaticResource DarkGrey}" />
        <Setter Property="Grid.Row" Value="1"/>
    </Style>

    <Style TargetType="Grid" x:Key="TransactionHeaderStyles">
        <Setter Property="Grid.Row" Value="0"/>
        <Setter Property="ColumnDefinitions" Value="*, 100, 130, 200, 80"/>
        <Setter Property="ColumnSpacing" Value="10"/>
        <Setter Property="Padding" Value="20, 0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource LightGrey}" />
        <Setter Property="Padding" Value="10,0"/>
    </Style>

    <Style TargetType="Label" x:Key="TransactionHeaderTextStyles">
        <Setter Property="VerticalTextAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="RobotoMonoRegular"/>
        <Setter Property="FontSize" Value="{StaticResource NormalText}"/>
        <Setter Property="TextColor" Value="{StaticResource White}"/>        
    </Style>

    <Style TargetType="Grid" x:Key="TransactionContentStyles">
        <Setter Property="Grid.Row" Value="1"/>
        <Setter Property="Padding" Value="20, 0"/>
    </Style>

    <Style TargetType="Grid" x:Key="DataRowStyles">
        <Setter Property="ColumnDefinitions" Value="*, 100, 130, 200, 80"/>
        <Setter Property="ColumnSpacing" Value="10"/>
        <Setter Property="HeightRequest" Value="50"/>
    </Style>

    <Style TargetType="Label" x:Key="DataRowTextStyle">
        <Setter Property="TextColor" Value="{StaticResource White}"/>
        <Setter Property="Padding" Value="10, 0"/>
        <Setter Property="FontFamily" Value="RobotoMonoRegular"/>
        <Setter Property="FontSize" Value="{StaticResource NormalText}"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
    </Style>

    <Style TargetType="Label"
           x:Key="NumericDataStyle" 
           BasedOn="{StaticResource DataRowTextStyle}">
        <Setter Property="HorizontalTextAlignment" Value="End"/>
    </Style>

    <Style TargetType="Label" 
           BasedOn="{StaticResource DataRowTextStyle}" 
           x:Key="TransactionDataTitleStyle">
        <Setter Property="HorizontalTextAlignment" Value="Start"/>
    </Style>

    <Style TargetType="Label" x:Key="CategoryLabel">
        <Setter Property="TextColor" Value="{StaticResource Black}"/>
        <Setter Property="FontFamily" Value="RobotoMonoBold"/>
        <Setter Property="FontSize" Value="{StaticResource NormalText}"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>

    </Style>

    <Style TargetType="Frame" x:Key="CategoryPill">
        <Setter Property="Grid.Column" Value="3"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="HasShadow" Value="False"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="HeightRequest" Value="30"/>
        <Setter Property="Padding" Value="20,0"/>
    </Style>

    <Style TargetType="Button" x:Key="RowDeleteButton">
        <Setter Property="Grid.Column" Value="4"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="WidthRequest" Value="40"/>
        <Setter Property="Background" Value="{StaticResource DarkGrey}"/>
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal" />
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Background" Value="{StaticResource Black}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Background" Value="{StaticResource Black}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Grid" x:Key="AddTransactionStyles">
        <Setter Property="Grid.Row" Value="2"/>
        <Setter Property="ColumnDefinitions" Value="*, 115, 116, 200, 80"/>
        <Setter Property="ColumnSpacing" Value="10"/>
        <Setter Property="BackgroundColor" Value="{StaticResource LightGrey}" />
        <Setter Property="Padding" Value="8"/>
    </Style>
</ResourceDictionary>