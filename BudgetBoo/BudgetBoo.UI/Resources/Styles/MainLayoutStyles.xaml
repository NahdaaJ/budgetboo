<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Main Layout Styles -->
    <Style TargetType="ContentView" x:Key="MainContentStyles">
        <Setter Property="BackgroundColor" Value="{StaticResource Black}" />
    </Style>

    <Style TargetType="FlexLayout" x:Key="NavBarStyles">
        <Setter Property="Background" Value="{StaticResource DarkGreyBrush}"/>
        <Setter Property="FlexLayout.Direction" Value="Column"/>
        <Setter Property="FlexLayout.AlignItems" Value="Center"/>
        <Setter Property="FlexLayout.AlignContent" Value="SpaceBetween"/>
    </Style>

    <Style TargetType="Image" x:Key="NavLogoStyles">
        <Setter Property="HeightRequest" Value="64"/>
        <Setter Property="Margin" Value="0, 25, 0, 50"/>
    </Style>

    <Style TargetType="Button" x:Key="NavButtonStyles">
        <Setter Property="ContentLayout" Value="Top,8" />
        <Setter Property="Margin" Value="0, 5"/>
        <Setter Property="FontFamily" Value="RobotoMonoRegular"/>
        <Setter Property="FontSize" Value="{StaticResource NormalText}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="BackgroundColor" Value="{StaticResource DarkGrey}" />
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HeightRequest" Value="90" />
        <Setter Property="WidthRequest" Value="90" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal" />
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource LightGrey}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource MidGrey}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

</ResourceDictionary>