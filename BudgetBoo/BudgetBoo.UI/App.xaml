<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BudgetBoo.UI"
             x:Class="BudgetBoo.UI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colours.xaml" />
                <ResourceDictionary Source="Resources/Styles/Font.xaml" />
                <ResourceDictionary Source="/Resources/Styles/MainLayoutStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="ContentPage">
                <Setter Property="Background" Value="{StaticResource BlackBrush}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
