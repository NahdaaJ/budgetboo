<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
           x:Class="BudgetBoo.UI.MainLayout"  
           Title="MainLayout">  

  <Grid ColumnDefinitions="110,*">  
      <FlexLayout   
          x:Name="NavBar"   
          Style="{StaticResource NavBarStyles}">  
          <Image Source="ghost.png" 
                 x:Name="NavLogo"
                 Style="{StaticResource NavLogoStyles}"/>
            <VerticalStackLayout x:Name="NavButtons">
                <Button Text="add"
                        ImageSource="plus.png"
                        Style="{StaticResource NavButtonStyles}" />
                <Button Text="plan"
                        ImageSource="notes2.png"
                        Style="{StaticResource NavButtonStyles}"/>
                <Button Text="savings"
                        ImageSource="piggybank.png"
                        Style="{StaticResource NavButtonStyles}"/>
            </VerticalStackLayout>
      </FlexLayout>  
      <ContentView   
          Grid.Column="1"   
          x:Name="MainContent"  
          Style="{StaticResource MainContentStyles}">  
          <Label Text="Welcome to BudgetBoo!"/>  
      </ContentView>  

  </Grid>  
</ContentPage>