<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Grid" x:Key="SearchBarStyles">
        <Setter Property="Margin" Value="35, 50, 35, 25"/>
        <Setter Property="MaximumWidthRequest" Value="1200"/>
        <Setter Property="ColumnDefinitions" Value="*, 170, 80"/>
        <Setter Property="ColumnSpacing" Value="5"/>
    </Style>

    <Style TargetType="Entry" x:Key="SearchEntryStyles">
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="Grid.Column" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource DarkGrey}"/>
        <Setter Property="FontFamily" Value="RobotoMonoRegular"/>
        <Setter Property="FontSize" Value="{StaticResource NormalText}"/>
        <Setter Property="TextColor" Value="{StaticResource White}"/>
    </Style>
    <Style TargetType="Picker" x:Key="SearchPickerStyles">
        <Setter Property="Grid.Column" Value="1"/>
        <Setter Property="WidthRequest" Value="155"/>
        <Setter Property="BackgroundColor" Value="{StaticResource DarkGrey}"/>
        <Setter Property="FontFamily" Value="RobotoMonoRegular"/>
        <Setter Property="FontSize" Value="{StaticResource NormalText}"/>
        <Setter Property="TextColor" Value="{StaticResource White}"/>
    </Style>
    <Style TargetType="Button" x:Key="SearchButtonStyles">
        <Setter Property="Grid.Column" Value="2"/>
        <Setter Property="BackgroundColor" Value="{StaticResource White}"/>
        <Setter Property="BorderColor" Value="White"/>

        <Setter Property="FontFamily" Value="RobotoMonoBold"/>
        <Setter Property="FontSize" Value="{StaticResource NormalText}"/>
        <Setter Property="TextColor" Value="{StaticResource Black}"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup Name="CommonStates">
                    <VisualState Name="Normal" />
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Black}" />
                            <Setter Property="TextColor" Value="{StaticResource LightGrey}"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Black}" />
                            <Setter Property="TextColor" Value="{StaticResource White}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
</ResourceDictionary>